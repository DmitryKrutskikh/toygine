#include <windows.h>

#ifdef WINAPI_FAMILY

#if (WINAPI_FAMILY == WINAPI_FAMILY_APP)

#define TARGET_OS OS_WINDOWS_RT
#define TARGET_CPU CPU_INTEL_x86

#elif (WINAPI_FAMILY == WINAPI_FAMILY_PHONE_APP)

#define TARGET_OS OS_WINDOWS_PHONE8
#define TARGET_CPU CPU_INTEL_x86

#endif

#endif  // WINAPI_FAMILY

#endif

#endif  // INCLUDE_CORE_HPP_
