function(add_console_application BINARY_NAME ${SRC_LIST} ${HDR_LIST} ${INL_LIST} ${RES_LIST} ${LIB_LIST})

find_package(Subversion)
if(SUBVERSION_FOUND AND EXISTS "${SOURCE_DIR}/.svn")
  Subversion_WC_INFO(${PROJECT_SOURCE_DIR} APP_VCS)
  set(APP_VERSION_REVISION ${APP_VCS_WC_REVISION})
endif()


if(APP_VERSION_MAJOR)
  set(PREPROCESSOR_DEFINITIONS "${PREPROCESSOR_DEFINITIONS} -DSE_APP_VERSION_MAJOR=${APP_VERSION_MAJOR}")
endif()
if(APP_VERSION_MINOR)
  set(PREPROCESSOR_DEFINITIONS "${PREPROCESSOR_DEFINITIONS} -DSE_APP_VERSION_MINOR=${APP_VERSION_MINOR}")
endif()
if(APP_VERSION_MAINTENANCE)
  set(PREPROCESSOR_DEFINITIONS "${PREPROCESSOR_DEFINITIONS} -DSE_APP_VERSION_MAINTENANCE=${APP_VERSION_MAINTENANCE}")
endif()
if(APP_VERSION_REVISION)
  set(PREPROCESSOR_DEFINITIONS "${PREPROCESSOR_DEFINITIONS} -DSE_APP_VERSION_REVISION=${APP_VERSION_REVISION}")
endif()


add_definitions(${PREPROCESSOR_DEFINITIONS})
source_group("Source Files" FILES ${SRC_LIST} ${INL_LIST})
add_executable(${BINARY_NAME} ${SRC_LIST} ${HDR_LIST} ${INL_LIST} ${RES_LIST})
target_link_libraries(${BINARY_NAME} ${LIB_LIST})

endfunction(add_console_application)